include mixins

.main__nav-wrap
  include navigation
section.container.container_right.main

  .main__content

    .main__card-big
      .card-big__title
        h1 
          +title('The best students essay writing service from east to west')

      ul.list
        li.list__item Writing your successful essay!
        li.list__item We make your writing dreams come true, bright and sound with our help 24/7!
        li.list__item Get your order in few steps and succeed in a day!
        li.list__item Our company helps you to create first-rate academic writing prepared by our pro essay writers!

      form.form.mt-2(action='#')
        .form__group.form__group_main
          input.search-form__input(type='text', placeholder='Enter your topic, keywords, subject, assignment...')
          img.search-form__icon(src="/img/icons/search.svg", alt="search")

    .main__card-small
      .card-small__title
        .card-small__slash \
        h4
          +title('Calculate your price')

      form.form(action="#")
        .form__group.form__group_main
          .select-style
            .select-style__text Type of paper:

            select#essay(name="Essay")
              option(value="1" class="select-dropdown__list-item") 1 Essay
              option(value="2" class="select-dropdown__list-item") 2 Essay
              option(value="3" class="select-dropdown__list-item") 3 Essay
              option(value="4" class="select-dropdown__list-item") 4 Essay

            //- +SelectBox('Essay', [
            //-   {name: '1 Essay', value: '1'}, 
            //-   {name: '2 Essay', value: '2'}, 
            //-   {name: '3 Essay', value: '3'}, 
            //-   {name: '4 Essay', value: '4'}, 
            //-   {name: '5 Essay', value: '5'}
            //- ])

        .form__group.form__group_main
          .select-style
            .select-style__text Academic level :

            +SelectBox('Academic level', [
              {name: '1 Undergraduate', value: '1'}, 
              {name: '2 Undergraduate', value: '2'}, 
              {name: '3 Undergraduate', value: '3'}, 
              {name: '4 Undergraduate', value: '4'}, 
              {name: '5 Undergraduate', value: '5'}
            ])

        .form__group.form__group_main
          .select-style
            .select-style__text Deadline:

            +SelectBox('Deadline', [
              {name: '1 days', value: '1'}, 
              {name: '2 days', value: '2'}, 
              {name: '3 days', value: '3'}, 
              {name: '4 days', value: '4'}, 
              {name: '5 days', value: '5'}
            ])

        .form__group.form__group_main
          .select-style
            .select-style__text Pages:

            +SelectBox('Pages', [
              {name: '1 page', value: '1'}, 
              {name: '2 page', value: '2'}, 
              {name: '3 page', value: '3'}, 
              {name: '4 page', value: '4'}, 
              {name: '5 page', value: '5'}
            ])

        .form__group.form__group_main-last
          .select-style__text Price: 
            span.form__accent-text $6
          a.main-btn.main-btn_transparent.ml-2.menu__btn(href="#") Next Step
